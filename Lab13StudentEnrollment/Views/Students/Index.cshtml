@model List<Lab13StudentEnrollment.Models.Student>

<h2>Students Page</h2>

<div class="wrapper">
    <form asp-controller="Students" asp-action="Index" method="get">

        Student: <input type="text" name="search">
        <input type="submit" value="Filter" />
    </form>
</div>
<div class="wrapper create">
    <form method="get" asp-controller="Students" asp-action="Create">
        <button type="submit">Create new student</button>
    </form>
</div>

<table class="view-students">
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Course ID</th>
        <th></th>
    </tr>

    @foreach (var student in Model)
    {
        <tr>
            <td>@student.Name</td>
            <td>@student.Age</td>
            <td>@student.CourseID</td>
            <td><a asp-controller="Students" asp-action="Details" asp-route-id="@student.ID">View</a></td>
        </tr>
    }
</table>